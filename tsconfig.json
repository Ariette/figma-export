{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "lib": ["es6"]
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "**/dist",
    "**/*.test.ts"
  ]
}
